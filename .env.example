# Reactive Resume - Environment Variables
# Copy this file to .env and customize as needed for your local development environment.
# Default values are configured for local development with Docker Compose.

# =============================================================================
# Application Configuration
# =============================================================================

# Node environment: development or production
NODE_ENV=development

# Port on which the server will run
PORT=3000

# Public URL where the application is accessible
PUBLIC_URL=http://localhost:5173

# Storage URL for accessing uploaded files (images, PDFs, etc.)
STORAGE_URL=http://localhost:9000/default

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres

# Docker Compose PostgreSQL variables (used by development.yml)
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# =============================================================================
# Authentication Secrets
# =============================================================================

# Secret keys for JWT token generation
# IMPORTANT: Change these to random secure strings in production!
# You can generate secure random strings using: openssl rand -base64 32
ACCESS_TOKEN_SECRET=your_access_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# =============================================================================
# Storage Configuration (MinIO)
# =============================================================================

# MinIO endpoint (hostname or IP)
STORAGE_ENDPOINT=localhost

# MinIO port
STORAGE_PORT=9000

# Storage region (optional, defaults to us-east-1)
STORAGE_REGION=us-east-1

# Storage bucket name
STORAGE_BUCKET=default

# MinIO access credentials
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin

# Use SSL for storage connections (false for local development)
STORAGE_USE_SSL=false

# Skip bucket existence check (useful for development)
STORAGE_SKIP_BUCKET_CHECK=true

# =============================================================================
# Chrome Browser Configuration (for PDF generation)
# =============================================================================

# Chrome/Puppeteer service token
CHROME_TOKEN=chrome_token

# Chrome service WebSocket URL
CHROME_URL=ws://localhost:8080

# Chrome port (used by Docker Compose)
CHROME_PORT=8080

# Ignore HTTPS errors in Chrome (useful for development)
CHROME_IGNORE_HTTPS_ERRORS=false

# =============================================================================
# Email Configuration (Optional)
# =============================================================================

# Email address to use as sender
# If SMTP_URL is not set, emails will be logged to console instead
MAIL_FROM=noreply@localhost

# SMTP server URL for sending emails (optional)
# Format: smtp://USER:PASSWORD@HOST:PORT or smtps://USER:PASSWORD@HOST:PORT
# SMTP_URL=smtp://user:pass@smtp.example.com:587

# =============================================================================
# Feature Flags (Optional)
# =============================================================================

# Disable user signups (set to "true" to disable)
DISABLE_SIGNUPS=false

# Disable email-based authentication (set to "true" to disable)
DISABLE_EMAIL_AUTH=false

# =============================================================================
# OAuth Providers (Optional)
# =============================================================================

# GitHub OAuth (Optional)
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret
# GITHUB_CALLBACK_URL=http://localhost:5173/api/auth/github/callback

# Google OAuth (Optional)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GOOGLE_CALLBACK_URL=http://localhost:5173/api/auth/google/callback

# OpenID Connect (Optional)
# VITE_OPENID_NAME=OpenID
# OPENID_AUTHORIZATION_URL=https://your-provider.com/authorize
# OPENID_CALLBACK_URL=http://localhost:5173/api/auth/openid/callback
# OPENID_CLIENT_ID=your_openid_client_id
# OPENID_CLIENT_SECRET=your_openid_client_secret
# OPENID_ISSUER=https://your-provider.com
# OPENID_SCOPE=openid profile email
# OPENID_TOKEN_URL=https://your-provider.com/token
# OPENID_USER_INFO_URL=https://your-provider.com/userinfo

# =============================================================================
# Translation & Localization (Optional)
# =============================================================================

# Crowdin project configuration (for translation management)
# CROWDIN_PROJECT_ID=your_project_id
# CROWDIN_PERSONAL_TOKEN=your_personal_token
